{
  "bin": {
    "gendiff": "bin/gendiff.js"
  },
  "name": "@hexlet/code",
  "version": "1.0.0",
  "description": "[![Actions Status](https://github.com/mashizinga/frontend-project-46/actions/workflows/hexlet-check.yml/badge.svg)](https://github.com/mashizinga/frontend-project-46/actions)",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "test": "jest --coverage --coverageReporters=text --coverageReporters=lcov --passWithNoTests",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mashizinga/frontend-project-46.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mashizinga/frontend-project-46/issues"
  },
  "homepage": "https://github.com/mashizinga/frontend-project-46#readme",
  "dependencies": {
    "commander": "^14.0.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^9.34.0",
    "@eslint/create-config": "^1.10.0",
    "@eslint/js": "^9.34.0",
    "@stylistic/eslint-plugin": "^5.2.3",
    "eslint-plugin-jest": "^28.14.0",
    "globals": "^16.3.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "plugins": ["jest"],
    "extends": [
      "eslint:recommended",
      "plugin:@stylistic/recommended"
    ],
    "globals": {
      "test": "readonly",
      "expect": "readonly",
      "describe": "readonly",
      "beforeEach": "readonly",
      "afterEach": "readonly"
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "semi": ["error", "never"],
      "eol-last": ["error", "always"]
    },
    "overrides": [
      {
        "files": ["__fixtures__/**/*.js", "**/__tests__/**/*.js"],
        "env": {
          "jest": true
        },
        "plugins": ["jest"],
        "extends": ["plugin:jest/recommended"]
      }
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
